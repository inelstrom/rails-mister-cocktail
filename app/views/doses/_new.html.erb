<div class="container mt-3">

    <div class="row">
      <div class="col-12">
        <h1>Add a new dose</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= simple_form_for [cocktail, dose] do |f| %>
          <%= f.association :ingredient %>
          <%= f.input :description %>
          <%= f.submit %>
        <% end %>
      </div>
    </div>

</div>
